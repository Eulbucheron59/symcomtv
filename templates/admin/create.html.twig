                {{ form_row(form.price, { 'label' : "Prix du produit" }, {'attr' : { 'rows' : 12}}) }}
                {{ form_row(form.picture, {'label' : " Photo du produit"}) }}
                {{ form_row(form.category, {'label' : "Cat√©gorie du produit"}) }}

            <button type="submit" class="btn btn-primary ">Ajouter un produit</button>

            {{ form_end(form) }}
            <a href="{{ path('app_admin_products') }}" class="btn btn-light col-3 mb-3">RETOUR</a>

        
        </div>



    </div>

{% endblock %}
